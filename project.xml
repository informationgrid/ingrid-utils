    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/java/de/ingrid/utils/udk</directory>
	            <includes>
	                <include>*.xml</include>
	            </includes>
            </resource>
            <resource>
				<directory>src/conf</directory>
                <excludes>
                	<exclude>**/*</exclude>
                </excludes>
			</resource>
        </resources>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>src/test</directory>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
    </build>
    <reports>
